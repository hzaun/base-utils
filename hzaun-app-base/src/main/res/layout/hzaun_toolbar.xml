<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <ImageView
        android:id="@+id/ivStartIcon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/material_margin_medium"
        android:padding="2dp"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_menu" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/material_margin_medium"
        android:layout_toEndOf="@id/ivStartIcon"
        android:layout_toStartOf="@id/ivEndIcon"
        android:text="@string/placeholder_title"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivEndIcon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:padding="4dp"
        android:tint="@color/white"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_close" />

    <ImageView
        android:id="@+id/ivEndIcon2"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_margin="16dp"
        android:layout_toStartOf="@id/ivEndIcon"
        android:padding="4dp"
        android:tint="@color/white"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvEndAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/material_margin_medium"
        android:padding="4dp"
        android:text="@string/placeholder_action"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_sm"
        android:visibility="invisible" />
</RelativeLayout>